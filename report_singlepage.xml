<?xml version="1.0" encoding="UTF-8"?>
<Report> 
	<Description><var var="I18N::translate('Print a pedigree chart on a single page.')" /></Description>
	<Title><var var="I18N::translate('Pedigree - single page')" /></Title>	
	<Input name="pid" lookup="INDI" type="text" default=""><var var="I18N::translate('Individual')" /></Input>
	<Input name="maxgen" type="select" default="4" options="1=>I18N::number(1)|2=>I18N::number(2)|3=>I18N::number(3)|4=>I18N::number(4)|5=>I18N::number(5)|6=>I18N::number(6)|7=>I18N::number(7)|8=>I18N::number(8)|9=>I18N::number(9)|10=>I18N::number(10)|11=>I18N::number(11)|12=>I18N::number(12)|13=>I18N::number(13)|14=>I18N::number(14)|15=>I18N::number(15)"><var var="I18N::translate('Generations')"/></Input>
	<!--	<Input name="fonts" type="select" default="dejavusans" options="arialunicid0=>I18N::translateContext('font name', 'Arial')|dejavusans=>I18N::translateContext('font name', 'DejaVu')|helvetica=>I18N::translateContext('font name', 'Helvetica')"><var var="I18N::translate('Font')"/></Input> -->
	<Input name="fonts" type="select" default="dejavusans" options="dejavusans=>I18N::translateContext('font name', 'DejaVu')"><var var="I18N::translate('Font')"/></Input>
	<Input name="pageorient" type="select" default="portrait" options="landscape=>I18N::translate('Landscape')|portrait=>I18N::translate('Portrait')"><var var="I18N::translate('Orientation')" /></Input>
	<Input name="boxStyle" type="select" default="normal" options="normal=>I18N::translate('Normal')|enhanced=>I18N::translate('Enhanced')"><var var="I18N::translate('Style of boxes')" /></Input>
	<Input name="connectLineWidth" type="select" default="0.8" options="0=>I18N::number(0)|0.2=>I18N::number(0.2,1)|0.4=>I18N::number(0.4,1)|0.6=>I18N::number(0.6,1)|0.8=>I18N::number(0.8,1)|1=>I18N::number(1)"><var var="I18N::translate('Line thickness')" /></Input>
	<Input name="compress" type="select" default="full" options="full=>I18N::translate('full')|medium=>I18N::translate('medium')|none=>I18N::translate('none')"><var var="I18N::translate('Compress')" /></Input>
	<Input name="showInfos" type="checkbox" default="1"><var var="I18N::translate('Show details')" /></Input>
	<Input name="showSiblings" type="checkbox" default="1"><var var="I18N::translate('Show siblings')" /></Input>
	<Input name="showSpouses" type="select" default="none" options="none=>I18N::translate('None')|show_spouses=>I18N::translate('Show spouses')|spouse-family=>I18N::translate('Spouses and children')"><var var="I18N::translate('Descendants')" /></Input>
	<Input name="SHOW_HIGHLIGHT_IMAGES" type="checkbox" default="1" ><var var="I18N::translate('Show highlight images in individual boxes')" /></Input>
	<Input name="SHOW_EMPTY_BOXES" type="checkbox" default="0"><var var="I18N::translate('Show empty boxes')" /></Input>
	<!-- <Input name="DEBUG" type="text">DEBUG</Input> -->
</Report> 
